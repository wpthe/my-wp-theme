# editorconfig.org

root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
quote_type = single

[*.scss]
quote_type = double

[*.json]
indent_style = space
indent_size = 2

[*.php]
indent_brace_style = K&R
spaces_around_brackets = inside
